<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taufanfadhilah.layouting.MainActivity">

    <Button
        android:id="@+id/btnA"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:background="@color/colorButton"
        android:text="Button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScoreA" />

    <Button
        android:id="@+id/btnB"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="37dp"
        android:background="@color/colorButton"
        android:text="Button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnA"
        app:layout_constraintTop_toBottomOf="@+id/tvScoreB" />

    <TextView
        android:id="@+id/tvScoreA"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_marginBottom="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="157dp"
        android:background="@color/colorTextBackground"
        android:text="0"
        android:textAlignment="center"
        android:textSize="150sp"
        app:layout_constraintBottom_toTopOf="@+id/btnA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

    <TextView
        android:id="@+id/tvScoreB"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_marginBottom="155dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="156dp"
        android:background="@color/colorTextBackground"
        android:text="0"
        android:textAlignment="center"
        android:textSize="150sp"
        app:layout_constraintBottom_toTopOf="@+id/btnB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />
</android.support.constraint.ConstraintLayout>
